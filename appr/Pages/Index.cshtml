@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gift of the Givers</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
</head>
<body>

    <style>
        .hero-section {
            background: linear-gradient(135deg, #1e5631 0%, #2d8659 100%);
            color: white;
            padding: 80px 20px;
            border-radius: 0 0 50px 50px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }

        .hero-subtitle {
            font-size: 1.3rem;
            margin-bottom: 30px;
            opacity: 0.95;
        }

        .mission-text {
            font-size: 1.1rem;
            max-width: 800px;
            margin: 0 auto 40px;
            line-height: 1.8;
        }

        .btn-custom-primary {
            background-color: #d4a855;
            border: none;
            color: white;
            padding: 15px 40px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 50px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(212, 168, 85, 0.3);
        }

            .btn-custom-primary:hover {
                background-color: #c49640;
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(212, 168, 85, 0.4);
                color: white;
            }

        .btn-custom-secondary {
            background-color: white;
            border: 2px solid #d4a855;
            color: #1e5631;
            padding: 15px 40px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 50px;
            transition: all 0.3s ease;
        }

            .btn-custom-secondary:hover {
                background-color: #d4a855;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(212, 168, 85, 0.3);
            }

        .info-section {
            padding: 60px 20px;
            background-color: #f8f9fa;
        }

        .impact-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            margin: 20px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            transition: transform 0.3s ease;
        }

            .impact-card:hover {
                transform: translateY(-5px);
            }

        .impact-number {
            font-size: 3rem;
            font-weight: 700;
            color: #2d8659;
            margin-bottom: 10px;
        }

        .impact-label {
            color: #666;
            font-size: 1.1rem;
        }

        .tagline {
            font-style: italic;
            color: rgba(255,255,255,0.9);
            font-size: 1.2rem;
            margin-bottom: 30px;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }
    </style>

    <div class="hero-section text-center">
        <h1 class="hero-title">Welcome to Gift of the Givers</h1>
        <p class="tagline">"Serving Humanity in Times of Need"</p>
        <p class="hero-subtitle">Africa's Largest Disaster Response Organization</p>

        <p class="mission-text">
            For over three decades, we have been at the forefront of humanitarian relief,
            providing hope and essential support to communities affected by disasters,
            poverty, and conflict across Africa and beyond. Join us in making a difference.
        </p>

        <div class="mt-4">
            <form asp-page="/Login" method="get" style="display:inline-block; margin: 10px;">
                <button type="submit" class="btn btn-custom-primary">Log In</button>
            </form>
            <form asp-page="/SignIn" method="get" style="display:inline-block; margin: 10px;">
                <button type="submit" class="btn btn-custom-secondary">Sign Up</button>
            </form>
        </div>
    </div>

    <div class="info-section">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-4">
                    <div class="impact-card">
                        <div class="impact-number">165+</div>
                        <div class="impact-label">Countries Served</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="impact-card">
                        <div class="impact-number">30+</div>
                        <div class="impact-label">Years of Service</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="impact-card">
                        <div class="impact-number">Millions</div>
                        <div class="impact-label">Lives Touched</div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-5">
                <h3 style="color: #1e5631; margin-bottom: 20px;">Our Mission</h3>
                <p style="max-width: 900px; margin: 0 auto; font-size: 1.1rem; color: #555; line-height: 1.8;">
                    We provide disaster relief, humanitarian aid, and development programs
                    to vulnerable communities regardless of race, religion, color, or political affiliation.
                    Our work spans emergency response, healthcare, education, and sustainable development.
                </p>
            </div>
        </div>
    </div>
	<footer>ANDRE</footer>
</body>

</html>