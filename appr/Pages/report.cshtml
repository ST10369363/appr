@page
@model appr.Pages.reportModel
@{
    ViewData["Title"] = "Incident Report";
    Layout = null; // Standalone design like login/sign-in
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gift of the Givers</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />

    <style>
        /* --- General Styles & Body Padding for Fixed Nav --- */
        body {
            margin: 0;
            /* Add padding to prevent content from hiding under the fixed navbar */
            padding-top: 70px;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* --- NAVIGATION VISIBILITY FIXES START HERE 🌟 --- */
        .navbar {
            /* Use a solid, dark color for contrast */
            background-color: #1e5631 !important; /* Your primary dark green */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            /* Make the navbar stick to the top */
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1030; /* Ensure it stays above other content */
        }

        .navbar-brand {
            color: #d4a855 !important; /* Gold color for brand */
            font-weight: 700;
            font-size: 1.5rem;
        }

        .nav-link {
            /* Ensure maximum contrast */
            color: #ffffff !important;
            font-weight: 500;
            font-size: 1.05rem;
            margin-right: 10px;
            transition: color 0.3s ease, background-color 0.3s ease;
            border-radius: 5px;
        }

            .nav-link:hover {
                /* Clear visual feedback on hover */
                color: #d4a855 !important; /* Change to gold on hover */
                background-color: rgba(255, 255, 255, 0.1);
            }

        /* Specific styling for the Donate button to make it stand out more */
        .navbar .btn-danger {
            background-color: #d4a855 !important;
            border-color: #d4a855 !important;
            color: #1e5631 !important; /* Dark text for contrast on the gold button */
            font-weight: 700;
            padding: 8px 18px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .navbar .btn-danger:hover {
                background-color: #c49640 !important;
                border-color: #c49640 !important;
                transform: translateY(-1px);
            }
        /* --- NAVIGATION VISIBILITY FIXES END HERE --- */


        /* --- Existing Report/Footer Styles (Adjusted for padding) --- */
        .report-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            /* Adjusted padding since body handles the top offset */
            padding: 40px 20px;
        }

        .report-card {
            background: white;
            padding: 50px;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 550px;
            border-top: 5px solid #2d8659;
        }

        .report-title {
            font-size: 2rem;
            font-weight: 700;
            color: #1e5631;
            margin-bottom: 10px;
            text-align: center;
        }

        .report-subtitle {
            color: #666;
            text-align: center;
            margin-bottom: 35px;
            font-size: 0.95rem;
        }

        .form-label {
            color: #1e5631;
            font-weight: 600;
            margin-bottom: 8px;
            display: block;
        }

        .form-input, .form-select, textarea {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 1rem;
            transition: all 0.3s ease;
            margin-bottom: 20px;
        }

            .form-input:focus, .form-select:focus, textarea:focus {
                outline: none;
                border-color: #2d8659;
                box-shadow: 0 0 0 3px rgba(45, 134, 89, 0.1);
            }

        .btn-submit {
            background-color: #2d8659;
            color: white;
            padding: 14px 30px;
            border: none;
            border-radius: 10px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
        }

            .btn-submit:hover {
                background-color: #1e5631;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(30, 86, 49, 0.3);
            }

        .logo-text {
            font-size: 1.3rem;
            font-weight: 700;
            color: #2d8659;
            text-align: center;
            margin-bottom: 30px;
        }

        .footer {
            background-color: #1e5631;
            color: white;
            padding: 40px 20px 20px;
            margin-top: auto;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            margin-bottom: 20px;
        }

        .footer-section h4 {
            color: #d4a855;
            margin-bottom: 15px;
            font-size: 1.1rem;
        }

        .footer-section p,
        .footer-section a {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            line-height: 1.8;
            font-size: 0.95rem;
        }

            .footer-section a:hover {
                color: #d4a855;
            }

        .footer-bottom {
            text-align: center;
            padding-top: 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container">
                <a class="navbar-brand fw-bold text-uppercase" asp-area="" asp-page="/Index">Gift of the Givers</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarMain">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/home">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/report">Incident Report</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/volunteer">Volunteer</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Login">Login / Sign In</a></li>
                        <li class="nav-item ms-lg-3"><a class="nav-link btn btn-danger px-3" asp-area="" asp-page="/donation">Donate</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="report-container">
        <div class="report-card">
            <div class="logo-text">Gift of the Givers</div>
            <h2 class="report-title">Incident Report</h2>
            <p class="report-subtitle">Submit a new incident for review</p>

            <form method="post" asp-page-handler="Submit">
                <div>
                    <label asp-for="NewReport.Severity" class="form-label">Severity</label>
                    <select asp-for="NewReport.Severity" class="form-select" required>
                        <option value="">-- Select Severity --</option>
                        <option>Small</option>
                        <option>Moderate</option>
                        <option>Severe</option>
                    </select>
                </div>

                <div>
                    <label asp-for="NewReport.IncidentLevel" class="form-label">Incident Level</label>
                    <select asp-for="NewReport.IncidentLevel" class="form-select" required>
                        <option value="">-- Select Level --</option>
                        <option>Low</option>
                        <option>Medium</option>
                        <option>High</option>
                    </select>
                </div>

                <div>
                    <label asp-for="NewReport.Description" class="form-label">Description</label>
                    <textarea asp-for="NewReport.Description" class="form-control" rows="4" placeholder="Describe the incident..." required></textarea>
                </div>

                <div>
                    <label asp-for="NewReport.Location" class="form-label">Location</label>
                    <input asp-for="NewReport.Location" class="form-input" placeholder="Enter the location" required />
                </div>

                <button type="submit" class="btn-submit">Submit</button>
            </form>

        </div>
    </div>

    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h4>About Us</h4>
                <p>Gift of the Givers is Africa's largest disaster response organization, providing humanitarian aid across 165+ countries for over 30 years.</p>
            </div>
            <div class="footer-section">
                <h4>Quick Links</h4>
                <p><a href="/">Home</a></p>
                <p><a href="/About">About</a></p>
                <p><a href="/Projects">Our Projects</a></p>
                <p><a href="/Contact">Contact Us</a></p>
            </div>
            <div class="footer-section">
                <h4>Contact</h4>
                <p>Email: info@giftofthegivers.org</p>
                <p>Phone: +27 36 637 6100</p>
                <p>Pietermaritzburg, South Africa</p>
            </div>
            <div class="footer-section">
                <h4>Get Involved</h4>
                <p><a href="/Donate">Donate</a></p>
                <p><a href="/Volunteer">Volunteer</a></p>
                <p><a href="/Partner">Partner With Us</a></p>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Gift of the Givers Foundation. All rights reserved. | Serving humanity with compassion.</p>
        </div>
    </footer>

    @* Pop-up message after successful submission *@
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            alert("@TempData["SuccessMessage"]");
        </script>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>