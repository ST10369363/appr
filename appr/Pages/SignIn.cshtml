@page
@model YourProject.Pages.SignInModel
@{
    ViewData["Title"] = "Sign In";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gift of the Givers</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .signin-card {
            background: white;
            padding: 50px;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 450px;
            border-top: 5px solid #2d8659;
            margin: 50px auto;
        }

        .btn-success, .btn-warning {
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="signin-card">
        <h2 class="text-center text-success">Create Account</h2>
        <form method="post">
            <div class="mb-3">
                <label asp-for="NewUser.First_Name" class="form-label"></label>
                <input asp-for="NewUser.First_Name" class="form-control" required />
            </div>
            <div class="mb-3">
                <label asp-for="NewUser.Last_Name" class="form-label"></label>
                <input asp-for="NewUser.Last_Name" class="form-control" required />
            </div>
            <div class="mb-3">
                <label asp-for="NewUser.Age" class="form-label"></label>
                <input asp-for="NewUser.Age" type="number" class="form-control" required />
            </div>
            <div class="mb-3">
                <label asp-for="NewUser.Email" class="form-label"></label>
                <input asp-for="NewUser.Email" type="email" class="form-control" required />
            </div>
            <div class="mb-3">
                <label asp-for="NewUser.Password" class="form-label"></label>
                <input asp-for="NewUser.Password" type="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-success w-100">Sign In</button>
            <a href="/Login" class="btn btn-warning w-100 mt-2">Go to Login</a>
        </form>
    </div>

    <footer class="footer mt-auto p-3 bg-dark text-white text-center">
        <p>&copy; 2025 Gift of the Givers Foundation. All rights reserved. | Serving humanity with compassion.</p>
    </footer>
</body>
</html>
