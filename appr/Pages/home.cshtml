@page
@model appr.Pages.homeModel
@{
    ViewData["Title"] = "Home";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gift of the Givers</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <style>
        /* --- General Styles --- */
        body {
            margin: 0;
            padding-top: 70px; /* IMPORTANT: Add padding to prevent content from hiding under the fixed navbar */
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        section {
            padding: 80px 0;
        }

        /* --- NAVIGATION VISIBILITY FIXES START HERE --- */
        .navbar {
            /* Use a solid, dark color for contrast */
            background-color: #1e5631 !important; /* Your primary dark green */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            /* Make the navbar stick to the top */
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1030; /* Ensure it stays above other content */
        }

        .navbar-brand {
            color: #d4a855 !important; /* Gold color for brand */
            font-weight: 700;
            font-size: 1.5rem;
            transition: color 0.3s ease;
        }

        .nav-link {
            /* Ensure maximum contrast */
            color: #ffffff !important;
            font-weight: 500;
            font-size: 1.05rem;
            margin-right: 10px;
            transition: color 0.3s ease, background-color 0.3s ease;
            border-radius: 5px;
        }

            .nav-link:hover {
                /* Clear visual feedback on hover */
                color: #d4a855 !important; /* Change to gold on hover */
                background-color: rgba(255, 255, 255, 0.1);
            }

        /* Specific styling for the Donate button to make it stand out more */
        .navbar .btn-danger {
            background-color: #d4a855 !important;
            border-color: #d4a855 !important;
            color: #1e5631 !important; /* Dark text for contrast on the gold button */
            font-weight: 700;
            padding: 8px 18px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .navbar .btn-danger:hover {
                background-color: #c49640 !important;
                border-color: #c49640 !important;
                transform: translateY(-1px);
            }
        /* --- NAVIGATION VISIBILITY FIXES END HERE --- */


        /* --- Existing Styles --- */
        h2 {
            color: #1e5631;
            font-weight: 700;
            font-size: 2.5rem;
            margin-bottom: 30px;
            text-align: center;
        }

        .stat-box {
            background: white;
            border-radius: 15px;
            padding: 30px;
            text-align: center;
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .stat-box:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 30px rgba(0,0,0,0.15);
            }

        .stat-number {
            font-size: 3rem;
            font-weight: 900;
            color: #2d8659;
        }

        .stat-label {
            font-size: 1.2rem;
            font-weight: 600;
            color: #444;
        }

        .lead {
            font-size: 1.3rem;
            font-weight: 600;
            color: #222;
        }

        @@media (max-width: 768px) {
            .stat-number {
                font-size: 2.2rem;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container">
                <a class="navbar-brand fw-bold text-uppercase" asp-area="" asp-page="/Index">Gift of the Givers</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarMain">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/home">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/report">Incident Report</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/volunteer">Volunteer</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Login">Login / Sign In</a></li>
                        <li class="nav-item ms-lg-3"><a class="nav-link btn btn-danger px-3" asp-area="" asp-page="/donation">Donate</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <section id="about" class="bg-light">
        <div class="container">
            <h2>About Information</h2>
            <div class="stat-box">
                <div class="stat-number">@Model.TotalDonations</div>
                <div class="stat-label">Total Donations Received</div>
            </div>
            <p class="lead text-center">
                This section contains details about our mission, values, and work.
                Every contribution helps us continue our efforts.
            </p>
        </div>
    </section>

    <section id="incident">
        <div class="container">
            <h2>Incident Report / News</h2>
            <div class="stat-box">
                <div class="stat-number">@Model.TotalIncidentReports</div>
                <div class="stat-label">Total Incidents Reported</div>
            </div>
            @if (Model.LatestIncident != null)
            {
                <p class="lead text-center">
                    <strong>LATEST REPORT:</strong>
                    @Model.LatestIncident.Severity incident at
                    <strong>@Model.LatestIncident.Location</strong>
                    on <strong>@Model.LatestIncident.ReportedDate.ToShortDateString()</strong>.
                </p>
            }
            else
            {
                <p class="lead text-center">No recent incident reports available.</p>
            }
        </div>
    </section>

    <section id="donate" class="bg-light">
        <div class="container">
            <h2>Donations</h2>
            <div class="stat-box">
                <div class="stat-number">@Model.TotalDonations</div>
                <div class="stat-label">Contributions Made</div>
            </div>
            <p class="lead text-center">Thank you to our amazing community for supporting us!</p>
        </div>
    </section>

    <section id="volunteer">
        <div class="container">
            <h2>Volunteers</h2>
            <div class="stat-box">
                <div class="stat-number">@Model.TotalVolunteers</div>
                <div class="stat-label">Active Volunteers</div>
            </div>
            <p class="lead text-center">
                Join our team of dedicated volunteers and make an impact today!
            </p>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>