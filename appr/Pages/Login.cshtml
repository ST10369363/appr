@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gift of the Givers</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .login-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
        }

        .login-card {
            background: white;
            padding: 50px;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 450px;
            border-top: 5px solid #2d8659;
        }

        .login-title {
            font-size: 2rem;
            font-weight: 700;
            color: #1e5631;
            margin-bottom: 10px;
            text-align: center;
        }

        .login-subtitle {
            color: #666;
            text-align: center;
            margin-bottom: 35px;
            font-size: 0.95rem;
        }

        .form-label {
            color: #1e5631;
            font-weight: 600;
            margin-bottom: 8px;
            display: block;
        }

        .btn-login {
            background-color: #2d8659;
            color: white;
            padding: 14px 30px;
            border: none;
            border-radius: 10px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            margin-bottom: 15px;
        }

            .btn-login:hover {
                background-color: #1e5631;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(30, 86, 49, 0.3);
            }

        .btn-secondary {
            background-color: #d4a855;
            color: white;
            padding: 14px 30px;
            border: none;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            width: 100%;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

            .btn-secondary:hover {
                background-color: #c49640;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(212, 168, 85, 0.3);
                color: white;
                text-decoration: none;
            }

        .footer {
            background-color: #1e5631;
            color: white;
            padding: 40px 20px 20px;
            margin-top: auto;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            margin-bottom: 20px;
        }

        .footer-section h4 {
            color: #d4a855;
            margin-bottom: 15px;
            font-size: 1.1rem;
        }

        .footer-section p, .footer-section a {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            line-height: 1.8;
            font-size: 0.95rem;
        }

            .footer-section a:hover {
                color: #d4a855;
            }

        .footer-bottom {
            text-align: center;
            padding-top: 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.9rem;
        }

        .logo-text {
            font-size: 1.3rem;
            font-weight: 700;
            color: #2d8659;
            text-align: center;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="login-card">
            <div class="logo-text">Gift of the Givers</div>
            <h2 class="login-title">Welcome Back</h2>
            <p class="login-subtitle">Login to access your account</p>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            <form method="post">
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Email Address</label>
                    <input asp-for="Input.Email" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <input asp-for="Input.Password" type="password" class="form-control" required />
                </div>
                <button type="submit" class="btn-login">Login</button>
                <a href="/SignIn" class="btn-secondary mt-2">Create New Account</a>
            </form>
        </div>
    </div>

    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h4>About Us</h4>
                <p>Gift of the Givers is Africa's largest disaster response organization, providing humanitarian aid across 165+ countries for over 30 years.</p>
            </div>
            <div class="footer-section">
                <h4>Quick Links</h4>
                <p><a href="/">Home</a></p>
                <p><a href="/About">About</a></p>
                <p><a href="/Projects">Our Projects</a></p>
                <p><a href="/Contact">Contact Us</a></p>
            </div>
            <div class="footer-section">
                <h4>Contact</h4>
                <p>Email: info@giftofthegivers.org</p>
                <p>Phone: +27 36 637 6100</p>
                <p>Pietermaritzburg, South Africa</p>
            </div>
            <div class="footer-section">
                <h4>Get Involved</h4>
                <p><a href="/Donate">Donate</a></p>
                <p><a href="/Volunteer">Volunteer</a></p>
                <p><a href="/Partner">Partner With Us</a></p>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Gift of the Givers Foundation. All rights reserved. | Serving humanity with compassion.</p>
        </div>
    </footer>

</body>
</html>
