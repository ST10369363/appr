<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - appr</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/appr.styles.css" asp-append-version="true" />
    <style>
        html {
            scroll-behavior: smooth;
        }

        section {
            padding: 80px 0;
            min-height: 100vh;
        }

        .navbar-nav .nav-item {
            margin: 0 8px;
        }

        .navbar-nav .nav-link {
            font-weight: 500;
        }

        footer {
            padding: 20px 0;
            text-align: center;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow-sm">
            <div class="container">
                <!-- 1. Logo -->
                <a class="navbar-brand fw-bold text-uppercase" href="#home">appr</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/home">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/donation">Donate</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/report">Incident Report</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/volunteer">volunteer</a></li>
                        <li class="nav-item"><a class="nav-link" href="#login">Login / Sign In</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main class="mt-5 pt-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark text-white">
        <div class="container">
            A-N-D-R-E
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
